<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>weather station</title>

</head>

<body class="bg-primary-subtle " style="font-family: 'Rubik';">
    <div class="container">
        <div class="row align-items-center vh-100">
            <div class="col-12 mx-auto">
                <div class="" style=" height: 500px; border-radius: 30px;background-color: rgb(92, 156, 229);">
                    <div class="d-flex flex-row-reverse">
                        <div class="col-xl-9" style=" height: 500px; border-radius: 30px;background-color: rgb(228, 241, 255);">
                            <div class="col-11 mx-auto pt-4">
                                <h5>Welcome to bridge weather station!</h5>
                                <h7>Check out weather information</h7>
                            </div>
                            <!-- <div class="col-11 mx-auto mt-3" style=" height: 250px; border-radius: 30px;background-color: rgb(250, 250, 250); ">

                            </div> -->
                            <div class="col-10 mt-3 mx-auto">
                                <div class="row d-flex justify-content-between">
                                    <!-- Humidity -->
                                    <div class="col-lg-3 p-3" style=" height: 100; border-radius: 30px;background-color: rgb(250, 250, 250); ">
                                        <div class="row d-flex justify-content-between">
                                            <div class="col-6">
                                                <h7 style="font-size: 14px;font-weight: bold;">Humidity</h7>
                                            </div>
                                            <div class="col-6 text-end">
                                                <img width="30" height="30" src="https://img.icons8.com/officel/40/humidity.png" alt="humidity" />
                                            </div>
                                        </div>
                                        <div class="col text-center">
                                            <h2 class="fw-2">
                                                <p id="humidity"></p>%</h2>
                                        </div>
                                    </div>
                                    <!-- Water level -->
                                    <div class="col-lg-3 p-3" style=" height: 100; border-radius: 30px;background-color: rgb(250, 250, 250); ">
                                        <div class="row d-flex justify-content-between">
                                            <div class="col-6">
                                                <h7 style="font-size: 14px;font-weight: bold;">Water level</h7>
                                            </div>
                                            <div class="col-6 text-end">
                                                <img width="30" height="30" src="https://img.icons8.com/external-goofy-color-kerismaker/96/external-Water-Level-weather-goofy-color-kerismaker.png" alt="external-Water-Level-weather-goofy-color-kerismaker" />
                                            </div>
                                        </div>
                                        <div class="col text-center">
                                            <h2 class="fw-2">
                                                <p id="waterLvl"></p>%</h2>
                                        </div>
                                    </div>
                                    <!-- Light value -->
                                    <div class="col-lg-3 p-3" style=" height: 100; border-radius: 30px;background-color: rgb(250, 250, 250); ">
                                        <div class="row d-flex justify-content-between">
                                            <div class="col-6">
                                                <h7 style="font-size: 14px;font-weight: bold;">Light value</h7>
                                            </div>
                                            <div class="col-6 text-end">
                                                <img width="30" height="30" src="https://img.icons8.com/officel/30/sun.png" alt="sun" />
                                            </div>
                                        </div>
                                        <div class="col text-center">


                                            <h2>
                                                <p id="lightValue"></p>

                                            </h2>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 p-2">

                            <img style="height: 250px;width: 300px; border-radius: 35px;" class="mx-auto d-block" src="/img/logo.jpg" class="rounded" alt="Thangon Bridge">
                            <h5 class="text-white text-center pt-5 col"><img width="30" height="30" src="https://img.icons8.com/ios/50/FFFFFF/address--v1.png" alt="address--v1" />Thangon Bridge</h5>

                            <div class="d-flex justify-content-center">
                                <p style="font-size: 72px;" class="text-white" id="tem"></p>
                                <img width="60" height="60" src="https://img.icons8.com/external-vitaliy-gorbachev-fill-vitaly-gorbachev/60/FFFFFF/external-thermometer-weather-vitaliy-gorbachev-fill-vitaly-gorbachev.png" alt="external-thermometer-weather-vitaliy-gorbachev-fill-vitaly-gorbachev"
                                />
                            </div>


                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js " integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz " crossorigin="anonymous "></script>
</body>
<script>
    fetch('/weather/fetch').then(res => res.json()).then(data => {
        console.log(data.humidity)

        document.getElementById("tem").innerHTML = data.temperature;
        document.getElementById("humidity").innerHTML = data.humidity
        document.getElementById("waterLvl").innerHTML = data.waterLvl;
        document.getElementById("lightValue").innerHTML = data.lightValue;
    })
</script>

</html>